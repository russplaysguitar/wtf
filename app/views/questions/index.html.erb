<div class="row-fluid">
  <div class="span8">
    <% if params[:unanswered] %>
      <h1>Unanswered Questions</h1>
    <% else %>
      <h1>All Questions</h1>
    <% end %>

    <ul class="questions">
      <% @questions.each do |question| %>
        <li>
          <h4><%= link_to question.title, question %></h4>
          <% question.tags.each do |t| %>
            <%= link_to t.name, t, :class => "badge badge-inverse" %>
          <% end %>
        </li>
      <% end %>
    </ul>

    <br />
    <% if @current_user %>
      <%= link_to 'Ask a Question', new_question_path, :class => "btn btn-primary" %>
    <% else %>
      <%= link_to 'Log in', '/login' %> or <%= link_to 'Sign up', '/signup' %> to ask a question.
    <% end %>
  </div>
  <div class="span2">
    <%= render :template => 'tags/index' %>
  </div>
</div>